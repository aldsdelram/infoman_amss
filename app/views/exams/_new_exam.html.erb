<%= form_for(@new_exam, :html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @new_exam.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4>This examination can't be saved:</h4>

      <ul>
        <% @new_exam.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, "New Examination Title:", :class=>"control-label col-md-4 col-sm-3 col-xs-4"%>
    <div class="col-md-6 col-sm-6 col-xs-6">
      <%= f.text_field :title, :class=>"form-control"%>
    </div>
    <div class="actions form-group">
      <%= f.submit "Add", :class=>"btn btn-success col-md-2 col-sm-2 col-xs-2"%>
    </div>
  </div>

<% end %>
