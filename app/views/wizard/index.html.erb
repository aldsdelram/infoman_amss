<script type="text/javascript">
  var width = $('#steps').width();
  var step = 0;



  $('a').click(function(){
    switch(step){
    case 0: doContinue = true; break;
    case 1: doContinue = false; break;
  }
    if($(this).attr('id') == 'next' && doContinue){
      step = $(this).data('step');
      $('.step').animate({
        left: -((width*step)) + 'px'
      }, 1000);
    }
  });
</script>
<script type="text/javascript">
  $(window).resize(function(){
    width = $('#steps').width();
    $('.step').css('left', -width*step + 'px');
  });
</script>
