<header>
 <nav class="navbar navbar-fixed-top">

      <div class="col-md-2 col-sm-3" id="logo">
        <div class="navbar-brand">
          infoman/AMSS
        </div>
      </div>



      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li id="search">
          <%= form_tag applicants_header_search_path, :method => :get do%>
            <%= text_field_tag :applicant_name ,params[:applicant_name] ,:placeholder=>"Search Applicant", :class=>"input"%>
            <%= submit_tag '&#57347;'.html_safe, :class=> "submit"%>
          <% end %>
        </li>
        <li><%= link_to "Applicants", applicants_path %>             </li>
        <li><%= link_to "Interviewers", interviewers_show_all_path %></li>
        <li><%= link_to "Schedules", schedules_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
          role="button" aria-expanded="false">
            <% if session[:admin_id].nil? %>
              Login
            <% else %>
              <%= Admin.find(session[:admin_id]).name %>
            <% end %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Edit profile", edit_admin_path(session[:admin_id]) %></li>
            <li class="divider"></li>
            <li><%= link_to 'logout',logout_path, :method=>:delete%></li>
          </ul>
        </li>
      </ul>
    </div>


  </nav>
</header>
