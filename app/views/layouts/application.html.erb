<!DOCTYPE html>
<html>
<head>
  <title>AMSS</title>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= javascript_include_tag 'bootstrap.js' %>
  <%= javascript_include_tag 'masonry.pkgd.min.js' %>
  <%= javascript_include_tag 'jquery.dataTables.min.js' %>
  <%# javascript_include_tag 'jquery.tablesorter.js' %>
  <%# javascript_include_tag 'jquery.tablesorter.widgets.js' %>
</head>

<body>

<div class = "container-fluid">

<% if controller.controller_name == 'sessions' &&
  controller.action_name == 'new'%>
  <%= yield %>
<% else %>
  <div class="row">
    <%= render 'layouts/header' %>
  </div>

  <div class="row">
    <div class="col-md-2 col-sm-3" id="side">

      <%= render 'layouts/side' %>
    </div>

    <div class="col-md-10 col-sm-9">
       <%= yield %>
    </div>
  </div>
<% end %>
</div>

</body>

</html>
