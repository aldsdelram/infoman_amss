<h1 class="page-header">New schedule</h1>



<div class="col-md-6">
	<div class="panel panel-success">
		<div class="panel-heading"></div>

		<div class="panel-body">
			<h3 class="col-md-12">APPLICANT</h3>
			<div class="col-md-12">
				<div class="col-md-4 col-sm-4">
					<%= image_tag @applicant.image_name, :class=>"img-responsive" %>
				</div>
				<div class="col-md-8 col-sm-8">
					<h4>Name: <span> <%= @applicant.firstname %></span></h4>
					<h4>Position applying: <span><%= @applicant.position.title %> </span></h4>
				</div>
			</div>
		</div>

		<div class="panel-footer">
			<h3 class="col-md-12">INTERVIEWER</h3>
			<div class="col-md-12">
				<div class="col-md-4 col-sm-4">
						<%= image_tag @applicant.interviewers.first.image_name, :class=>"img-responsive" %>
				</div>
				<div class="col-md-8 col-sm-8">
					<h4>Name: <%= @applicant.interviewers.first.name %> </h4>
					<h4>Department: <%= @applicant.interviewers.first.department.department_name %> </h4>
					<h4>Position: <%= @applicant.interviewers.first.position_title %> </h4>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</div>

<div class="col-md-6">
	<%= render 'form' %>
</div>
