<h1 class="page-header">New schedule</h1>

<div class="col-md-12">
	<div class="panel panel-success">
		<div class="panel-heading"></div>

		<div class="panel-body">
			<h3 class="col-md-12">APPLICANT</h3>
			<div class="col-md-12">
				<div class="col-md-4 col-sm-4">
					<%= image_tag @applicant.image_name, :size=>'150x150', :class=>"img-responsive" %>
				</div>
				<div class="col-md-8 col-sm-8">
					<h4>Name: <span> <%= @applicant.firstname %></span></h4>
					<h4>Position applying: <span><%= @applicant.position.title %> </span></h4>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="col-md-12">
	<%= render 'form' %>
</div>
