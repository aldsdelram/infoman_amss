<h1 class="page-header">New schedule</h1>
<div class="col-md-6">
	<h3 class="col-md-12">APPLICANT</h3>
	<div class="col-md-12">
		<div class="col-md-4">
			<%= image_tag @applicant.image_name, :size => "150x150" %>
		</div>
		<div class="col-md-8">
			<h4 class="col-md-12">Name:  <%= @applicant.firstname %> </h4>
			<h4 class="col-md-12">Position applying:  <%= @applicant.position.title %> </h4>
		</div>
	</div>
	<h3 class="col-md-12">INTERVIEWER</h3>
	<div class="col-md-12">
		<div class="col-md-4">
				<%= image_tag @applicant.interviewers.first.image_name, :size => "150x150" %>
		</div>
		<div class="col-md-8">
			<h4 class="col-md-12">Name: <%= @applicant.interviewers.first.name %> </h4>
			<h4 class="col-md-12">Department: <%= @applicant.interviewers.first.department.department_name %> </h4>
			<h4 class="col-md-12">Position: <%= @applicant.interviewers.first.position_title %> </h4>
		</div>
	</div>
	</div>
<div class="col-md-6">
	<%= render 'form' %>
</div>